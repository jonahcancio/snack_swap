= form_with(model: snack) do |form|
  - if snack.errors.any?
    %div{style: "color: red"}
      %h2= "#{pluralize(snack.errors.count, "error")} prohibited this snack from being saved:"

      %ul
        - snack.errors.each do |error|
          %li= error.full_message

  %div
    = form.label :name, style: "display: block"
    = form.text_field :name

  %div
    = form.label :description, style: "display: block"
    = form.text_field :description

  %div
    = form.label :img_url, style: "display: block"
    = form.text_field :img_url

  %div
    = form.submit
