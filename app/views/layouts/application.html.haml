!!!
%html
  %head
    %title Snack Swap
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
    %link{ href: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin: "anonymous" }
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        = link_to "Snack App", root_path, class: "navbar-brand"
        %ul.navbar-nav.ms-auto
          - if authenticated?
            %li.nav-item
              %span.nav-link.text-light.me-2
                Welcome, #{current_user&.name.presence || current_user&.email}
            %li.nav-item
              = button_to "Logout", logout_path, method: :delete, class: "btn btn-link nav-link", form: { "data-turbo-confirm": "Are you sure you want to log out?" }
          - else
            %li.nav-item
              = link_to "Login", new_session_path, class: "nav-link"

    .container.mt-4
      = yield



