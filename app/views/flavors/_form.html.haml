= form_with(model: flavor) do |form|
  - if flavor.errors.any?
    %div{style: "color: red"}
      %h2= "#{pluralize(flavor.errors.count, "error")} prohibited this flavor from being saved:"

      %ul
        - flavor.errors.each do |error|
          %li= error.full_message

  %div
    = form.label :name, style: "display: block"
    = form.text_field :name

  %div
    = form.label :color, style: "display: block"
    = form.text_field :color

  %div
    = form.label :score, style: "display: block"
    = form.text_field :score

  %div
    = form.submit
